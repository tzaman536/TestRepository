          items.Add().Text("Get Started");
      }).Events(e => e.Open("open").Close("close").Select("select").Activate("activate").Deactivate("deactivate"))
    )
    <script>
        function open(e) {
            //alert("open");
        }

        function close(e) {
            //alert("open");

        }

        function select(e) {
            if ($(e.item).children(".k-link").text() == "Home") {
                window.location.href = '@Url.Action("Index","Home")'
            }
            if ($(e.item).children(".k-link").text() == "Contact") {
                window.location.href = '@Url.Action("About","Home")'
            }
            if ($(e.item).children(".k-link").text() == "Get Started") {
                window.location.href = '@Url.Action("Contact","Home")'
            }
        }

        function activate(e) {
