@(Html.Kendo().ToolBar()
    .Name("ToolBar")
    .Items(items =>
    {
        items.Add().Type(CommandType.Button).Togglable(true).Text("My Company").Id("btnMyCompany").Toggle("buttonToggleHandler");
        items.Add().Type(CommandType.Separator);
        items.Add().Type(CommandType.Button).Togglable(true).Text("My Clients").Id("btnMyClients").Toggle("buttonToggleHandler");
        items.Add().Type(CommandType.Button).Togglable(true).Text("Invoices").Id("btnInvoices").Toggle("buttonToggleHandler");
        items.Add().Type(CommandType.Separator);
    })
    .Events(e => e.Click("onClick").Toggle("onToggle").Open("onOpen").Close("onClose").OverflowOpen("onOverflowOpen").OverflowClose("onOverflowClose"))
)
