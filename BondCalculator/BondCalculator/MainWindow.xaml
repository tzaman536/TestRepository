<Window x:Class="BondCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BondCalculator"
        mc:Ignorable="d"
        Title="Bond Calculator" Height="350" Width="525">
    <Grid>
        <StackPanel Background="Silver">
            <Label Content="Par Value" />
            <TextBox x:Name="parValue" Text="{Binding ParValue, Mode=TwoWay, StringFormat=\{0:\#\,\#\#\#\;\(\#\,#\#\#\)\}}"/>
            <Label Content="Coupon"/>
            <TextBox x:Name="coupon" Text="{Binding Coupon, Mode=TwoWay}"/>
            <Label Content="Payment Frequency"/>
            <ComboBox Margin="10,10,0,13" Name="cbPaymentFrequency" 
                      HorizontalAlignment="Left"  
                      VerticalAlignment="Top" 
                      Width="194" Height="30" 
                      SelectedValue="{Binding PaymentFrequency, Mode=TwoWay}"
                      >
            </ComboBox>
            <Button x:Name="calcButton" Content="Calculate" Click="calcButton_Click"/>
            <Button x:Name="restButton" Content="Reset" Click="restButton_Click"/>
        </StackPanel>
    </Grid>
    
</Window>
