        </div>
    </div>*@
</div>

<script>
    $(document).ready(function () {
        document.getElementById("productDetailLargeImage").src = "@Url.Content("~/content/products/{0}?{1}")".format('@ViewBag.Product.OriginalImageId', new Date().getTime());
        if('@ViewBag.Product.ImageIdOne'  != null)
        {
            document.getElementById("imageOne").src = "@Url.Content("~/content/products/{0}?{1}")".format('@ViewBag.Product.ImageIdOne', new Date().getTime());
        }

        

        $("#idBuyNowTopMenu").click(function () {
            var url = '@Url.Action("ReviewCart", "AmzHome")';
            window.location.href = url;
        })

        updateCartButton();
    });

    function updateCartButton() {
        $("#shoppingCartLink").text(getCartCount());
        //$("#shoppingCartLink").addClass("cart");

    }
    function addOneItemToCart() {
        addToCart('@ViewBag.Product.ProductID', '@ViewBag.Product.UnitPrice', 1,true);
        updateCartButton();
    }
</script>
<style>

        .imageBig img{
            float: left;
            width:500px;
            height:500px;
            opacity:100;
            margin-bottom:40px;
            margin-right:10px;
        }
        .imageMedium img{
            float: left;
