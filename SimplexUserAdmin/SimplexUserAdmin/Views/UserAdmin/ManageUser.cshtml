
@{
    ViewBag.Title = "Manage User";
}

<h2>Manage User</h2>
<div id="userMessage">
    <h5 style="color:blue">@ViewBag.Message </h5>
</div>
<div id="idProductUploadForm">
    @using (Html.BeginForm("ManageUserToRole", "UserAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <dl>
            <dt>
                Role Name:
            </dt>
            <dd>
                <input type="text" id="idRoleName" name="roleName" required />
            </dd>
            <dt>
                User Name:
            </dt>
            <dd>
                <input type="text" id="idUserName" name="userName" required />
            </dd>
        </dl>
        <input id="btnAddRole" type="submit" name="action" value="Add User To Role"/>
        <input id="btnRemoveFromRole" type="submit" name="action" value="Remove User From Role" />
    }
